<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/gold">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/dateText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear1"
            android:gravity="center"
            android:layout_below="@id/dateText">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/routeText"
                android:text="Route"
                android:textStyle="bold"
                android:textColor="@color/blue_royal"
                android:textSize="30dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/linear1"
            android:id="@+id/linear2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Driver"
                android:id="@+id/driverText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DriverNumber"
                android:id="@+id/driver_numberText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linear2"
            android:id="@+id/linear3">



        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AVAILABLE TIME"
            android:id="@+id/availabilityText"
            android:background="@color/blue_royal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/gold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_below="@id/linear3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/availability_details"
            android:gravity="center"
            android:layout_below="@id/availabilityText"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue_royal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/blue_royal"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/linear_label">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:00 AM"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_600_amLabel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 PM"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_1230_pmLabel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3:30 PM"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_330_pmLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:00 PM"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_600_pmLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:30 PM"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_930_pmLabel"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/availabilityText"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/availability">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="schedule_600_am"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_600_amText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="schedule_1230_pm"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_1230_pmText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="schedule_330_pm"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_330_pmText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="schedule_600_pm"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_600_pmText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="schedule_930_pm"
                    android:textColor="@color/gold"
                    android:id="@+id/schedule_930_pmText"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/availability_details"
            android:gravity="fill_horizontal"
            android:id="@+id/status_details">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Uc"
                android:padding="10dp"
                android:id="@+id/onUCLMViewText"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Last updated:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/timeText"/>

        </LinearLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>